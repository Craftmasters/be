    '#markup' => '<label>Benefits</label>',
  );

  $form['major_medical'] = array(
    '#type' => 'checkbox',
    '#title' => t('Major Medical'),
  );

  $form['limited_medical'] = array(
    '#type' => 'checkbox',
    '#title' => t('Limited Medical'),
  );

  $form['teledoc'] = array(
    '#type' => 'checkbox',
    '#title' => t('Teledoc'),
  );

  $form['mec'] = array(
    '#type' => 'checkbox',
    '#title' => t('MEC'),
  );

  $form['dental'] = array(
    '#type' => 'checkbox',
    '#title' => t('Dental'),
  );

  $form['vision'] = array(
    '#type' => 'checkbox',
    '#title' => t('Vision'),
  );

  $form['life'] = array(
    '#type' => 'checkbox',
    '#title' => t('Life & AD&D'),
  );

  $form['short_term_disability'] = array(
    '#type' => 'checkbox',
    '#title' => t('Short Term Dissability'),
  );

  $form['special_benefits'] = array(
    '#type' => 'checkbox',
